html, body {
	width: 210mm;	/*A4 Paper Width*/
	margin: 25.4mm 31.75mm;
}
div.page-1 {
	page-break-after: always;
	page-break-inside: avoid;
}
div.page-1, div.page-2 {
	height: 297mm; /*A4 Paper Height*/
	border: 5px solid #FF0004;
}
div.page-1 div.page-header {
	text-align: center;
}
div.page-1 div.page-header {
	font-weight: bold;
}
table, caption, tbody, tfoot, thead, tr, th, td {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
	width : 100%;
	table-layout: fixed;
	border: 4px solid #000;
}
table caption {
	font-weight: bold;
}
th, td {
	text-align: center;
}
table th, table td {
	border: 2px solid #000;
	border-collapse: collapse;
}
table#joint, table#base-metals, table#pwht, table#gas, table#filler-metal, table#electrical {
	border-top: none;
	border-bottom: 1px solid #000;
	border-left: none;
	border-right: none;
}
table#general-details th, table#general-details td {
border-bottom: none;
}

table#general-details tr .border-right {
	border-right: 4px solid #000;
}

div.pqr-details-wrapper {
	margin-bottom: 2mm;
}
table#joint tr td {
	border: none;
}
table#joint tr td div.joint-image {
	height: 40mm;
}
div.general-details-wrapper table th[scope="row"], div.general-details-wrapper table tr td.no-border.left {
	text-align: left;
	border-left: none;
}
div.general-details-wrapper table th.no-border {
	border: none;
}
/*div.general-details-wrapper table td.no-border.right {
	border-right: none;
}*/
div.general-details-wrapper table td.left {
	text-align: left;
}
table#general-details table tr td:last-child, table#general-details table tr th:last-child {
	border-right: none;
}
table#base-metals tr:last-child td {
	border-bottom: none;
}

/*===================================================================================================================*/


/*CSS For Page - 2*/
div.page-2 div.table {
	margin-bottom: 5mm;
}
div.page-2 div.pqr-no {
	text-align: right;
}
div.page-2 div.pqr-no span, div.page-2 div.comments span {
	text-decoration: underline;
}
div#certify p {
	font-size: 20px;
}
table#fillet-weld-test tr td.macro-results {
	text-align: left;
}
table#other-test tr td {
	text-align: left;
}
table#other-test tr td.left {
	width: 35mm;
}
table#welder-details tr td {
	white-space: nowrap;
}
table#welder-details tr td:first-child {
	text-align: left;/*width: 40mm;*/
}
table#certified-by tr td {
	text-align: left;
	white-space: nowrap;
}
